{
    "compilerOptions": {
      "lib": ["es2017", "es7", "es6", "dom"],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "module": "commonjs",
      "target": "es2016",
      "preserveSymlinks": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "paths": {
      "@lib/*": ["lib/*"]
    },
    
    "exclude": [
      "node_modules",
      "dist"
    ]
  }